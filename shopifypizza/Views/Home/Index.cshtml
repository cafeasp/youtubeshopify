@model shopifypizza.Models.ProductListModel
@{
    ViewBag.Title = "Home Page";
}


<p class="pt-4"><strong>Product count:</strong> @Model.Count</p>

@if(Model.Count > 0)
{
    <table class="table table-bordered">
        <tr>
            <td>id</td>
            <td>title</td>
            <td>description</td>
            <td>vendor</td>
        </tr>


        @foreach (var item in Model.Products)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Vendor</td>
        </tr>
        }
    </table>
}